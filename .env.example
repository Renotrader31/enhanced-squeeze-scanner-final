# Enhanced Squeeze Scanner 4.0 Configuration Example
# Copy this file to .env.local and configure according to your needs

# API Configuration
# Set to 'true' to use live Ortex API data (requires ORTEX_API_KEY)
# Set to 'false' to use enhanced demo data
NEXT_PUBLIC_USE_LIVE_DATA=false

# Ortex API Configuration (required only if NEXT_PUBLIC_USE_LIVE_DATA=true)
# Get your API key from https://ortex.com/api
ORTEX_API_KEY=your_ortex_api_key_here

# Scanner Configuration
NEXT_PUBLIC_AUTO_REFRESH_INTERVAL=30000
NEXT_PUBLIC_DEFAULT_MIN_HOLY_GRAIL=60
NEXT_PUBLIC_DEFAULT_MIN_SHORT_INTEREST=15
NEXT_PUBLIC_DEFAULT_MIN_UTILIZATION=80

# Display Configuration
NEXT_PUBLIC_SHOW_ALERTS=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_MAX_RESULTS=100

# Development Configuration
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info